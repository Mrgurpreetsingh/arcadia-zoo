{% extends 'base.html.twig' %}

{% block title %}Animaux - Zoo Arcadia{% endblock %}

{% block stylesheets %}
    {{ parent() }} <!-- Conserve common.css et EasyAdmin si applicable -->
    <link rel="stylesheet" href="{{ asset('css/animals.css') }}"> <!-- CSS spécifique à la page Animaux -->
{% endblock %}

{% block body %}
    <!-- Header -->
    <header class="header">
        <div class="logo">Arcadia Zoo</div>
        <nav class="navbar">
            <ul>
                <li><a href="{{ path('app_home') }}">Accueil</a></li>
                <li><a href="{{ path('app_animals') }}">Animaux</a></li>
                <li><a href="{{ path('app_services') }}">Services</a></li>
                <li><a href="{{ path('app_habitats') }}">Habitats</a></li>
                <li><a href="{{ path('app_contact') }}">Contact</a></li>
                <li><a href="{{ path('app_login') }}">Connexion</a></li>
            </ul>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <img src="{{ asset('img/lion.webp') }}" alt="Lion" class="hero-image">
        <div class="hero-text">
            <h1>Nos Animaux</h1>
            <h2>Découvrez les résidents d’Arcadia</h2>
        </div>
    </section>

    <!-- Animal List -->
    <section class="animal-list">
        <div class="cards">
            {% for animal in animals %}
            <div class="card">
                <img src="{{ animal.images ? asset(animal.images) : asset('img/lion.webp') }}" alt="{{ animal.prenom }}" class="card-image">
                <h3>{{ animal.prenom }}</h3>
                <h4>{{ animal.race }}</h4>
                <a href="{{ path('app_animal_detail', {'id': animal.id}) }}" class="btn">Voir détails</a>
            </div>
            {% else %}
            <p>Aucun animal disponible pour le moment.</p>
            {% endfor %}
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="logo">Arcadia Zoo</div>
        <ul>
            <li><a href="{{ path('app_habitats') }}">Habitats</a></li>
            <li><a href="{{ path('app_services') }}">Services</a></li>
            <li><a href="{{ path('app_contact') }}">Contact</a></li>
            <li><a href="{{ path('app_about') }}">À propos</a></li>
        </ul>
        <p>© 2025 Arcadia Zoo. RGPD. Cookies.</p>
    </footer>

    <!-- Cookie Banner -->
    <div class="cookie-banner">
        <p>Nous utilisons des cookies. <a href="#">En savoir plus</a></p>
        <button>Accepter</button>
    </div>
{% endblock %}