{% extends 'base.html.twig' %}

{% block title %}Habitats - Zoo Arcadia{% endblock %}

{% block stylesheets %}
    {{ parent() }} <!-- Conserve common.css et EasyAdmin si applicable -->
    <link rel="stylesheet" href="{{ asset('css/habitats.css') }}"> <!-- CSS spécifique à la page Habitats -->
{% endblock %}

{% block body %}
    <!-- Header -->
    <header class="header">
        <div class="logo">Arcadia Zoo</div>
        <nav class="navbar">
            <ul>
                <li><a href="{{ path('app_home') }}">Accueil</a></li>
                <li><a href="{{ path('app_animals') }}">Animaux</a></li>
                <li><a href="{{ path('app_services') }}">Services</a></li>
                <li><a href="{{ path('app_habitats') }}">Habitats</a></li>
                <li><a href="{{ path('app_contact') }}">Contact</a></li>
                <li><a href="{{ path('app_login') }}">Connexion</a></li>
            </ul>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <img src="{{ asset('img/savane.webp') }}" alt="Savane" class="hero-image">
        <div class="hero-text">
            <h1>Nos Habitats</h1>
            <h2>Des écosystèmes préservés</h2>
        </div>
    </section>

    <!-- Habitat List -->
    <section class="habitat-list">
        <div class="cards">
            {% for habitat in habitats %}
            <div class="card">
                <img src="{{ habitat.images ? asset(habitat.images) : asset('img/savane.webp') }}" alt="{{ habitat.nom }}" class="card-image">
                <h3>{{ habitat.nom }}</h3>
                <p>{{ habitat.description|slice(0, 100) }}{% if habitat.description|length > 100 %}...{% endif %}</p>
                <a href="{{ path('app_habitat_detail', {'id': habitat.id}) }}" class="btn">Voir détails</a>
            </div>
            {% else %}
            <p>Aucun habitat disponible pour le moment.</p>
            {% endfor %}
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="logo">Arcadia Zoo</div>
        <ul>
            <li><a href="{{ path('app_habitats') }}">Habitats</a></li>
            <li><a href="{{ path('app_services') }}">Services</a></li>
            <li><a href="{{ path('app_contact') }}">Contact</a></li>
            <li><a href="{{ path('app_about') }}">À propos</a></li>
        </ul>
        <p>© 2025 Arcadia Zoo. RGPD. Cookies.</p>
    </footer>

    <!-- Cookie Banner -->
    <div class="cookie-banner">
        <p>Nous utilisons des cookies. <a href="#">En savoir plus</a></p>
        <button>Accepter</button>
    </div>
{% endblock %}